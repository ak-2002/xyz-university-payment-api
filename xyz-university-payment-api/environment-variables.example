# Environment Variables Example
# Copy this file to .env and fill in your actual values

# JWT Configuration
JWT__KEY=your-super-secret-key-with-at-least-32-characters-for-jwt-signing
JWT__ISSUER=xyz-university
JWT__AUDIENCE=xyz-api
JWT__EXPIRYINHOURS=1

# Database Configuration
CONNECTIONSTRINGS__DEFAULTCONNECTION=Server=localhost\\SQLEXPRESS;Database=UniversityDb;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True
CONNECTIONSTRINGS__REDIS=localhost:6379

# RabbitMQ Configuration
RABBITMQ__USERNAME=guest
RABBITMQ__PASSWORD=guest

# Redis Configuration
REDIS__INSTANCENAME=xyz-university-api:
REDIS__DEFAULTEXPIRATIONMINUTES=30
REDIS__PAYMENTCACHEEXPIRATIONMINUTES=60
REDIS__STUDENTCACHEEXPIRATIONMINUTES=120
REDIS__SUMMARYCACHEEXPIRATIONMINUTES=45

# API Versioning
APIVERSIONING__DEFAULTVERSION=2.0
APIVERSIONING__SUPPORTEDVERSIONS__0=1.0
APIVERSIONING__SUPPORTEDVERSIONS__1=2.0
APIVERSIONING__DEPRECATEDVERSIONS__0=1.0
APIVERSIONING__ENABLEVERSIONING=true
APIVERSIONING__SHOWDEPRECATIONWARNINGS=true
APIVERSIONING__DEPRECATIONWARNINGDAYS=30

# Identity Server
IDENTITYSERVER__AUTHORITY=http://localhost:5153

# SendGrid Email Configuration
SENDGRID__APIKEY=your-sendgrid-api-key-here
SENDGRID__FROMEMAIL=noreply@xyzuniversity.edu
SENDGRID__FROMNAME=XYZ University Finance Department 